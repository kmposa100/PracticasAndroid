<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.run.practicasandroid.Actividad01Activity">

    <TextView
        android:text="Numero 2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txNumero2"
        android:layout_alignBaseline="@+id/etNumero2"
        android:layout_alignBottom="@+id/etNumero2"
        android:layout_alignLeft="@+id/txNumero1"
        android:layout_alignStart="@+id/txNumero1"
        android:layout_toStartOf="@+id/etNumero2"
        android:layout_alignRight="@+id/txNumero1"
        android:layout_alignEnd="@+id/txNumero1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etNumero1"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etNumero2"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/txNumero1"
        android:layout_alignLeft="@+id/etNumero1"
        android:layout_alignStart="@+id/etNumero1" />

    <TextView
        android:text="Numero 1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txNumero1"
        android:layout_alignBaseline="@+id/etNumero1"
        android:layout_alignBottom="@+id/etNumero1"
        android:layout_toLeftOf="@+id/etNumero1"
        android:layout_toStartOf="@+id/etNumero1"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <TextView
        android:text="Resultado:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txResultado"
        android:layout_alignBaseline="@+id/txResultadoMostrar"
        android:layout_alignBottom="@+id/txResultadoMostrar"
        android:layout_alignRight="@+id/txNumero2"
        android:layout_alignEnd="@+id/txNumero2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txResultadoMostrar"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/etNumero2"
        android:layout_alignLeft="@+id/etNumero2"
        android:layout_alignStart="@+id/etNumero2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_marginTop="63dp"
        android:id="@+id/txMensajeError"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:width="270dp" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDividir"
        android:onClick="divide"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/etNumero2"
        android:layout_alignEnd="@+id/etNumero2"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="27dp" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="resta"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/buttonDividir"
        android:layout_alignStart="@+id/buttonDividir" />

    <Button
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="multiplica"
        android:layout_alignBaseline="@+id/buttonDividir"
        android:layout_alignBottom="@+id/buttonDividir"
        android:layout_alignLeft="@+id/txNumero2"
        android:layout_alignStart="@+id/txNumero2"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="suma"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txResultado"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

</RelativeLayout>
